doctype html
html
	head
		//- Standard Meta
		meta(charset='UTF-8')
		meta(http-equiv='X-UA-Compatible' content='IE=edge, chrome=1')
		meta(name='renderer' content='webkit')
		meta(name='viewport' content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no')

		//- Site Properties
		title ShaderStudio - Browse
		link(rel='stylesheet' href='/static/components/semantic/dist/semantic.min.css')
		link(rel='stylesheet' href='/static/css/common.css')
		link(rel='stylesheet' href='/static/css/browse.css')
		link(rel='icon' href='/static/img/favicon.ico')

	body
		.ui.inverted.vertical.masthead.center.aligned.segment.interactive
			.ui.container
				.ui.large.secondary.inverted.pointing.menu
					a.item.VisbyRoundCF.nav-logo(href='/') ShaderStudio
					a.item(href='/') Home
					a.active.item(href='/browse') Browse
					a.item(href='/create') Create
					a.item(href='/live') Live
					.ui.category.search.item
						.ui.icon.input
							input.prompt(type='text', placeholder='Search ShaderStudio')
							i.search.link.icon
						.results
					.right.item
						a.ui.inverted.button Login

			canvas#canvas
			.ui.icon.buttons.toolkit
				button.ui.icon.inverted.button.share#share
					i.share.alternate.icon
				button.ui.icon.inverted.button.left#left
					i.left.chevron.icon
				button.ui.icon.inverted.button.pause#control
					i.pause.icon
				button.ui.icon.inverted.button.right#right
					i.right.chevron.icon

			.ui.action.input.top1em#goto
				input(type='number' min=0 step=1)
				button.ui.icon.button
					i.right.arrow.icon
			p.top1em.info

			.ui.stackable.two.column.grid.container
				.eight.wide.column
					span.right1em
						i.sort.icon
						| Sort:
					.ui.buttons.right1em
						if sort == 'view'
							.ui.active.inverted.button View
						else
							a.ui.inverted.button(href="/browse?sort=view&order=#{order}&filter=#{filter}") View

						if sort == 'like'
							.ui.active.inverted.button Like
						else
							a.ui.inverted.button(href="/browse?sort=like&order=#{order}&filter=#{filter}") Like

						if sort == 'comm'
							.ui.active.inverted.button Comm
						else
							a.ui.inverted.button(href="/browse?sort=comm&order=#{order}&filter=#{filter}") Comm

						if sort == 'date'
							.ui.active.inverted.button Date
						else
							a.ui.inverted.button(href="/browse?sort=date&order=#{order}&filter=#{filter}") Date
					.ui.icon.buttons
						if order == 'desc'
							.ui.active.inverted.button
								i.sort.content.descending.icon
						else
							a.ui.inverted.button(href="/browse?sort=#{sort}&order=desc&filter=#{filter}")
								i.sort.content.descending.icon

						if order == 'asc'
							.ui.active.inverted.button
								i.sort.content.ascending.icon
						else
							a.ui.inverted.button(href="/browse?sort=#{sort}&order=asc&filter=#{filter}")
								i.sort.content.ascending.icon

				.eight.wide.column
					span.right1em
						i.tags.icon
						| Filter:
					.ui.buttons
						if filter == 'gpusound'
							a.ui.active.inverted.button(href="/browse?sort=#{sort}&order=#{order}") GPU Sound
						else
							a.ui.inverted.button(href="/browse?sort=#{sort}&order=#{order}&filter=gpusound") GPU Sound

						if filter == 'microphone'
							a.ui.active.inverted.button(href="/browse?sort=#{sort}&order=#{order}") Microphone
						else
							a.ui.inverted.button(href="/browse?sort=#{sort}&order=#{order}&filter=microphone") Microphone

						if filter == 'musicinput'
							a.ui.active.inverted.button(href="/browse?sort=#{sort}&order=#{order}") Music Input
						else
							a.ui.inverted.button(href="/browse?sort=#{sort}&order=#{order}&filter=musicinput") Music Input

						if filter == 'webcamera'
							a.ui.active.inverted.button(href="/browse?sort=#{sort}&order=#{order}") Web Camera
						else
							a.ui.inverted.button(href="/browse?sort=#{sort}&order=#{order}&filter=webcamera") Web Camera

		script#tmpl-info(type='text/x-tmpl')
			span.ellipsis.right1char
				| No. {%=o.index%}
				a.userlink.left1char(href="/view/{%=o.id%}") "{%=o.name%}"
				span.left1char.right1char by
				a.userlink(href="/user/{%=o.username%}") {%=o.username%}
			span.stat
				i.unhide.icon
				span.right1char {%=o.viewed%}
				i.heart.icon
				| {%=o.likes%}

		script#glslVert(type='x-shader/x-vertex')
			include glsl/vert.vert

		script#glslImage(type='x-shader/x-fragment')
			include glsl/image.frag

		script#glslSound(type='x-shader/x-fragment')
			include glsl/sound.frag

		script.
			window.shaderIds = !{JSON.stringify(shaderIds)}
			window.shaderIndex = 0
			window.config = !{JSON.stringify(config)}

		script(src='/static/components/jquery/dist/jquery.min.js')
		script(src='/static/components/semantic/dist/semantic.min.js')
		script(src='/static/components/twgl.js/dist/twgl.min.js')
		script(src='/static/components/blueimp-tmpl/js/tmpl.min.js')
		script(src='/static/js/render.js')
		script(src='/static/js/browse.js')
