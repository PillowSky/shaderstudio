doctype html
html
	head
		//- Standard Meta
		meta(charset='UTF-8')
		meta(http-equiv='X-UA-Compatible' content='IE=edge, chrome=1')
		meta(name='renderer' content='webkit')
		meta(name='viewport' content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no')

		//- Site Properties
		title ShaderStudio - Search
		link(rel='stylesheet', href='/components/semantic/dist/semantic.min.css')
		link(rel='stylesheet' href='/css/common.css')
		link(rel='stylesheet', href='/css/search.css')
		link(rel='icon' href='/img/favicon.ico')

	body
		.ui.inverted.vertical.masthead.aligned.segment.interactive
			.ui.container
				.ui.large.secondary.inverted.pointing.menu
					a.item.VisbyRoundCF.nav-logo(href='/') ShaderStudio
					a.item(href='/') Home
					a.active.item(href='/browse') Browse
					a.item Create
					a.item Live
					.ui.category.search.item
						.ui.icon.input
							input.prompt(type='text', placeholder='Search ShaderStudio')
							i.search.link.icon
						.results
					.right.item
						a.ui.inverted.button Login

			.ui.stackable.two.column.grid.container#control
				.eight.wide.column
					span.right1em
						i.sort.icon
						| Sort:
					.ui.buttons.right1em
						.ui.active.inverted.button View
						.ui.inverted.button Like
						.ui.inverted.button Hots
						.ui.inverted.button Time
					.ui.icon.buttons
						.ui.active.inverted.button
							i.sort.content.descending.icon
						.ui.inverted.button
							i.sort.content.ascending.icon

				.eight.wide.column
					span.right1em
						i.tags.icon
						| Tags:
					.ui.buttons
						.ui.inverted.button Sound
						.ui.inverted.button Reality
						.ui.inverted.button Microphone
						.ui.inverted.button Camera

			.ui.stackable.four.column.grid.container#content
				each shader, index in shaders
					.four.wide.column.scene
						a(href="/view/#{shader.info.id}")
							canvas.canvas
						p
							span.ellipsis
								| "#{shader.info.name}"
								| by
								a.userlink(href="/user/#{shader.info.username}") #{shader.info.username}
							span.stat
								i.unhide.icon
								span.right1char #{shader.info.viewed}
								i.heart.icon
								| #{shader.info.likes}

			.ui.container.center.aligned.top1em
				.ui.pagination.menu.inverted
					a.active.item 1
					a.item(href='/search?page=2') 2
					a.item 3
					a.item 4
					a.item 5
					a.item 6
					a.item 7
					a.item 8
					a.item 9
					a.item 10

		script#glslVert(type='x-shader/x-vertex')
			include glsl/vert.vert

		script#glslImage(type='x-shader/x-fragment')
			include glsl/image.frag

		script#glslSound(type='x-shader/x-fragment')
			include glsl/sound.frag

		script.
			window.shaders = !{JSON.stringify(shaders)}
			window.config = !{JSON.stringify(config)}

		script(src='/components/jquery/dist/jquery.min.js')
		script(src='/components/semantic/dist/semantic.min.js')
		script(src='/components/twgl.js/dist/twgl.min.js')
		script(src='/js/render.js')
		script(src='/js/search.js')
