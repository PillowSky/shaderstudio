doctype html
html
	head
		//- Standard Meta
		meta(charset='UTF-8')
		meta(http-equiv='X-UA-Compatible' content='IE=edge, chrome=1')
		meta(name='renderer' content='webkit')
		meta(name='viewport' content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no')

		//- Site Properties
		title ShaderStudio - Search
		link(rel='stylesheet', href='/components/semantic/dist/semantic.min.css')
		link(rel='stylesheet', href='/css/search.css')
		link(rel='icon' href='/img/favicon.ico')

	body
		.ui.inverted.vertical.masthead.aligned.segment.interactive
			.ui.container
				.ui.large.secondary.inverted.pointing.menu
					a.toc.item
						i.sidebar.icon
					a.item.VisbyRoundCF.nav-logo ShaderStudio
					a.active.item Home
					a.item Browse
					a.item Create
					a.item Live
					.ui.category.search.item
						.ui.icon.input
							input.prompt(type='text', placeholder='Search ShaderStudio')
							i.search.link.icon
						.results
					.right.item
						a.ui.inverted.button Login

			.ui.container#content
				.ui.four.column.grid
					each shader, index in shaders
						.four.wide.column.scene
							a(href="/view/#{shader.info.id}")
								canvas.canvas
							p "#{shader.info.name}" by #{shader.info.username}
							i.unhide.icon
							span #{shader.info.viewed}&nbsp;&nbsp;
							i.heart.icon
							span #{shader.info.likes}

		script#glslVert(type='x-shader/x-vertex')
			include glsl/vert.vert

		script#glslImage(type='x-shader/x-fragment')
			include glsl/image.frag

		script#glslSound(type='x-shader/x-fragment')
			include glsl/sound.frag

		script.
			window.shaders = !{JSON.stringify(shaders)}
			window.config = !{JSON.stringify(config)}

		script(src='/components/jquery/dist/jquery.min.js')
		script(src='/components/semantic/dist/semantic.min.js')
		script(src='/components/twgl.js/dist/twgl.min.js')
		script(src='/js/render.js')
		script(src='/js/search.js')
