doctype html
html
	head
		meta(charset='UTF-8')
		meta(http-equiv='X-UA-Compatible' content='IE=edge, chrome=1')
		meta(name='description' content='ShaderStudio')
		meta(name='renderer' content='webkit')
		meta(name='viewport' content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no')
		title ShaderStudio - #{info.name}
		link(rel='stylesheet', href='/components/semantic/dist/semantic.min.css')
		link(rel='stylesheet', href='/css/view.css')
		link(rel='icon' href='/img/favicon.ico')

	body
		.ui.inverted.vertical.masthead.aligned.segment
			.ui.container
				.ui.large.secondary.inverted.pointing.menu
					a.toc.item
						i.sidebar.icon
					a.active.item Home
					a.item Work
					a.item Company
					a.item Careers
					.right.item
						a.ui.inverted.button Log in
						a.ui.inverted.button Sign Up

			.ui.grid.container#content
				.eight.wide.column#left
					.row#canvasWrapper
						canvas#canvas
						i.backward.icon
						span &nbsp;&nbsp;
						i.pause.icon
						span &nbsp;&nbsp;
						span 0s&nbsp;&nbsp;
						span 60FPS&nbsp;&nbsp;
						i.maximize.icon
					.row.note
						h1 #{info.name}
					.row.float-right
						i.unhide.icon
						span #{info.viewed}&nbsp;&nbsp;
						i.heart.icon
						span #{info.likes}
					.row
						p Tags: #{info.tags.join(', ')}
					.row
						p #{info.description}
					.row
						p Uploaded by #{info.username} on #{new Date(info.date * 1000).toDateString()}
					br
					br
					.row Comments

				.eight.wide.column#right
					pre#editor
						!{renderpass[0].code}

		script#vs(type='x-shader/x-vertex')
			include pass.vert
		script#fs(type='x-shader/x-fragment')
			include head.frag
			!{renderpass[0].code}
			include foot.frag
		script.input.
			window.inputs = !{JSON.stringify(renderpass[0].inputs)}

		script(src='/components/jquery/dist/jquery.min.js')
		script(src='/components/semantic/dist/semantic.min.js')
		script(src='/components/twgl.js/dist/twgl.min.js')
		script(src='/components/ace-builds/src-min/ace.js')
		script(src='/js/view.js')
