doctype html
html
	head
		meta(charset='UTF-8')
		meta(http-equiv='X-UA-Compatible' content='IE=edge, chrome=1')
		meta(name='description' content='ShaderStudio')
		meta(name='renderer' content='webkit')
		meta(name='viewport' content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no')
		title ShaderStudio - #{info.id}
		link(rel='stylesheet', href='/components/semantic/dist/semantic.min.css')
		link(rel='stylesheet', href='/css/view.css')
		link(rel='icon' href='/img/favicon.ico')

	body
		canvas#canvas

		script#vs(type='x-shader/x-vertex')
			include pass.vert
		script#fs(type='x-shader/x-fragment')
			include head.frag
			!{renderpass[0].code}
			include foot.frag


		script(src='/components/jquery/dist/jquery.min.js')
		script(src='/components/semantic/dist/semantic.min.js')
		script(src='/components/twgl.js/dist/twgl.min.js')
		script(src='/js/view.js')
